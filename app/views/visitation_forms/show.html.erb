<h2>Kuvat</h2>
<%= form_tag({action: :upload_image}, multipart: true) do %>
    <%= label_tag :file, "Tiedosto:" %>
    <%= file_field_tag :file %>
    <%= submit_tag("Lisää tiedosto") %>
<% end %>
<p>
  <% if @images != nil && @images.count > 0 %>
      <% @images.reverse_each do |img| %>
        <%= img[:original_filename] %> <br />
        <%= image_tag( img[:temp_path] ) %> <br /><br/>
      <% end %>
  <% end %>
</p>