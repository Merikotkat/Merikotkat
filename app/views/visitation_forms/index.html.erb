


<h1><%= @header %></h1>



<div id="pagination">

</div>

<div class="clear"></div>

<table id="formList">
  <thead>
    <tr>
      <th><%= create_link t('nest_id', scope: [:activerecord, :attributes, :visitation_form]), "nest_id" %></th>
      <th><%= create_link t('nest', scope: [:activerecord, :attributes, :visitation_form]), "nest" %></th>
      <th><%= create_link t('visit_date', scope: [:activerecord, :attributes, :visitation_form]), "visit_date" %></th>
      <th><%= create_link t('photographer_name', scope: [:activerecord, :attributes, :visitation_form]), "photographer_name" %></th>

      <% if @visitation_forms.count > 0 %>
          <th></th>
          <th></th>
      <% end %>
    </tr>
  </thead>




  <tbody>
    <% @visitation_forms.each do |visitation_form| %>

      <tr>
        <td class="nestid"><%= visitation_form.nest_id  %></td>
        <td class="nestname"><%= visitation_form.nest %></td>
        <td class="visitdate"><%= visitation_form.visit_date.strftime("%d.%m.%Y")  unless visitation_form.visit_date.nil?  %></td>
        <td class="photographer"><%= visitation_form.photographer_name %></td>

        <% if @visitation_forms.count > 0 %>
            <td><%= link_to t('show'), visitation_form %></td>
            <% if @type.nil? || @type == "unsubmitted" %>
                <td><%= link_to t('edit'), edit_visitation_form_path(visitation_form) %></td>
            <% else %>
                <td></td>
            <% end %>
        <% end %>
      </tr>

  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_visitation_form'), new_visitation_form_path %>

<script>
  $(function() {
      var count = <%= @total_visitation_forms %>;
      var current_page = <%= params[:page].nil? ? 1 : params[:page] %>
      var per_page = <%= @per_page %>;
      var sorting = "<%= @sortby_order %>";

      var pages = Math.ceil(count / per_page);

      if(pages > 1) {
          var url = "<%= url_for action:"index", type: params[:type] %>";

          if(current_page > 1) {
              $("#pagination").append('<a href="' + url + '?page=' + (current_page-1) + sorting +'">' + '<<' + '</a>');
          }

          for(var i = 0; i < pages; i++) {
              if(i == (current_page-1)) {
                $("#pagination").append('<div id="pagination-active">' + (i+1) + '</div>');
              }
              else {
                $("#pagination").append('<a href="' + url + '?page=' + (i+1) +sorting +'">' + (i+1) + '</a>');
              }
          }

          if(current_page < pages) {
              $("#pagination").append('<a href="' + url + '?page=' + (current_page+1) +sorting + '">' + '>>' + '</a>');
          }
      }
  });
</script>