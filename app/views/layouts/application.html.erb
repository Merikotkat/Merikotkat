<!DOCTYPE html>
<html>
<head>
  <title>Linssi</title>
  <meta charset="UTF-8">
  <%= stylesheet_link_tag  "application", media: "all", "data-turbolinks-track" => true %>
  <%# javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico'%>

  <%= javascript_include_tag 'jquery-2.1.0.min' %>
  <%= javascript_include_tag 'jquery-ui.min' %>
  <%= javascript_include_tag "jquery.ui.datepicker-fi" %>
  <%= stylesheet_link_tag 'jquery-ui-smoothness' %>

</head>




<body>


<div id="megacontainer">
  <div id="row-megacontainer">
    <div id="masthead" role="banner">
      <div id="masthead-inner">
        <% if ENV['DEVMODE'].eql? 'true' %>
              <span class="devmode">TEST ENVIROMENT</span>
        <% end %>


        <div id="userinfo">
          <ul>
            <li><%= link_to t('logout'), {controller: 'koala_client/external_authentication', action: 'logout'},  class: 'button-link' %></li>
            <li><span class="name"><%= @user[:user_name] %></span> (<%= @user[:login_id] %>)</li>
          </ul>
        </div>


        <a href="https://rengastus.helsinki.fi">
          <span id="logo">&nbsp;</span>
        </a>

        <a href="<%= url_for(root_path)%>">
      <span id="sitetitle">
      <%= image_tag('linssi.png') %> Linssi
      </span>
        </a>



        <div id="navigation-wrap" role="navigation">
          <nav id="utilitymenu">
                 <ul role="menu">
                  <li role="menuitem"><a href="?locale=fi">suomeksi</a></li>
                  <!--<li role="menuitem"><a href="?locale=sv">p√• svenska</a></li>-->
                  <li role="menuitem"><a href="?locale=en">in English</a></li>
              </ul>
          </nav>

          <nav id="mainmenu" role="navigation">
            <ul class="nav-bar" role="menu">
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <!-- Content section -->
    <div id="main-area" action="" role="main" >
      <form method="get" id="searchform">
        <%= t("activerecord.attributes.visitation_form.nest_id") %><input type="text" name="nestid" value="<%= @nestid %>" />
        <%= t("activerecord.attributes.visitation_form.nest") %><input type="text" name="nestname" value="<%= @nestname %>" />
        <%= t("activerecord.attributes.visitation_form.species_id") %><input type="text" name="speciesid" value="<%= @speciesid %>" />
        DateFrom<input type="date" name="datefrom" value="<%= @datefrom %>" />
        DateTo<input type="date" name="dateto" value="<%= @dateto %>" />
        <button type="submit"><%= t("search") %></button>

        <script type="text/javascript">
            $(function () {
                $.datepicker.setDefaults($.datepicker.regional['<%= I18n.locale %>']);
                $("#searchform input[type='date']").datepicker({ dateFormat: 'yy-mm-dd' });
            });
        </script>
      </form>


      <div id="content-wrapper">
        <div id="sidebar">
          <ul>
            <li><%= t("forms").upcase %></li>

                <li>
                  <%= image_tag "folder_unsubmitted.png" %>
                  <%=link_to(t('unsubmitted') + " (" + VisitationForm.get_forms_of_type(@user, "unsubmitted", nil, nil, nil, nil, nil, nil, nil).count.to_s + ")", {controller: 'visitation_forms', action: "index", type: "unsubmitted"})   %>
                </li>
                <li>
                  <%= image_tag "folder_submitted.png" %>
                  <%=link_to(t('submitted') + " (" + VisitationForm.get_forms_of_type(@user, "submitted", nil, nil, nil, nil, nil, nil, nil).count.to_s + ")", {controller: 'visitation_forms', action: "index", type: "submitted"})   %>
                </li>
                <% if @user[:type] == 'admin' %>
                    <li>
                      <%= image_tag "folder_archive.png" %>
                      <%=link_to(t('archive') + " (" + VisitationForm.get_forms_of_type(@user, "archive", nil, nil, nil, nil, nil, nil, nil).count.to_s + ")", {controller: 'visitation_forms', action: "index", type: "archive"})   %>
                    </li>
                <% end %>
                  <li>
                    <%= image_tag "page_add.png" %>
                    <%= link_to t("new_visitation_form"), new_visitation_form_path %>
                  </li>
          </ul>
        </div>
        <div id="content" class="page-content">
          <%= yield %>
        </div>
      </div>

    </div>


  </div>
  <div id="footer">

  </div>
</div>

</body>
</html>
